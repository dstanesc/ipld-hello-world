{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
